        <% } %>
    </div>

    <div class="row row-centered">
      <div class="page-header">
        <center><h2>Events and Planning</h2></center>
      </div>
      <% for (; i < team.length; i++) { %>
        <div class="col-md-4 col-centered">
          <div class="card">
            <img src="/images/<%= team[i].image %>" alt="<%= team[i].name %>" style="width:100%">
