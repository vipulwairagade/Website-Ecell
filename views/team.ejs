<% include partials/head %>

  <div class="container page-wrapper">
    <div class="page-header">
      <center>
        <h1>Our Amazing Team</h1></center>
    </div><br>
    <div class="row row-centered">
      <div class="page-header">
        <center><h2>President</h2></center>
      </div>
      <% var i; %>
        <% for (i = 0; i < 1; i++) { %>
          <div class="col-md-4 col-centered">
            <div class="card">
              <img src="/images/<%= team[i].image %>" alt="<%= team[i].name %>" style="width:100%">
              <div class="container">
                <h2><%= team[i].name %></h2>
                <p class="title">
                  <%= team[i].position %>
                </p>
                <ul class="list-inline social-buttons">
                  <li><a href="<%= team[i].linkedin %>"><i class="fa fa-linkedin"></i></a> </li>
                </ul>
              </div>
            </div>
          </div>
          <% } %>
    </div>
